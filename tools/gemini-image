#!/bin/bash
# Gemini Image Generator - Generate images using Google's Gemini API

# Get the directory where this script is located
SCRIPT_DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
NODE_SCRIPT="$SCRIPT_DIR/gemini-image-tool.js"

# Check if the Node script exists
if [ ! -f "$NODE_SCRIPT" ]; then
  echo "Error: Could not find gemini-image-tool.js in $SCRIPT_DIR"
  exit 1
fi

# Execute the Node script with all arguments
node "$NODE_SCRIPT" "$@" 